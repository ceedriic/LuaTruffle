#!/usr/bin/env bash

JAVACMD=${JAVACMD:=java}
JLUA_JAR=${JLUA_JAR:=target/jlua-complete-0.1-SNAPSHOT.jar}

PROGRAM_ARGS=""
JAVA_ARGS=""

for opt in "$@"
do
  case $opt in
    -J*)
      opt=${1:2}
      JAVA_ARGS="$JAVA_ARGS $opt" ;;
    *)
      PROGRAM_ARGS="$PROGRAM_ARGS $opt" ;;
  esac
done

$JAVACMD $JAVA_ARGS -jar $JLUA_JAR $PROGRAM_ARGS
